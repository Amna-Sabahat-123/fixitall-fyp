<body>
    <div class="d-flex flex-column flex-md-row">

        <!-- Sidebar -->
        <nav class="sidebar bg-white shadow-sm p-3">
            <div class="sidebar-logo mb-4 font-weight-bold">EZY & FIX</div>
            <ul class="nav flex-column sidebar-nav nav-pills" id="dashboardTabs">
                <p>Welcome <%= serviceProvider.fullName %>!</p>
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="pill" href="#dashboard"><i
                            class="bi bi-speedometer"></i>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#book_service"><i class="bi bi-tools"></i>Book a
                        Service</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#services"><i class="bi bi-tools"></i>Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#customers"><i class="bi bi-people"></i>Customers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#help"><i class="bi bi-question-circle"></i>Help</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/customers/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                  </li>
                  
            </ul>
        </nav>

        <!-- Content -->
        <div class="content flex-fill p-4">

            <div class="tab-content">
                <div class="tab-pane fade show active" id="dashboard">
                    <div class="dashboard-section">
                        <h2 class="mb-4">Dashboard</h2>

                        <!-- Quick Stats Cards -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <div class="card text-white bg-primary h-100">
                                    <div class="card-body d-flex flex-column justify-content-between"
                                        style="min-height: 120px;">
                                        <h5 class="card-title">Total Bookings</h5>
                                        <p class="card-text fs-4 mb-0">56</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-white bg-success h-100">
                                    <div class="card-body d-flex flex-column justify-content-between"
                                        style="min-height: 120px;">
                                        <h5 class="card-title">Completed Services</h5>
                                        <p class="card-text fs-4 mb-0">48</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-white bg-warning h-100">
                                    <div class="card-body d-flex flex-column justify-content-between"
                                        style="min-height: 120px;">
                                        <h5 class="card-title">Upcoming Appointements</h5>
                                        <p class="card-text fs-4 mb-0">3</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-white bg-danger h-100">
                                    <div class="card-body d-flex flex-column justify-content-between"
                                        style="min-height: 120px;">
                                        <h5 class="card-title">Cancellations</h5>
                                        <p class="card-text fs-4 mb-0">2</p>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Notifications -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header bg-light fw-bold">Notifications</div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">You have 1 new booking request</li>
                                        <li class="list-group-item">Customer Jane left a 5-star review</li>
                                        <li class="list-group-item">1 service marked as completed</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Profile Completion -->
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header bg-light fw-bold">Profile Completion</div>
                                    <div class="card-body">
                                        <p>You're 80% done! Complete your profile to get more bookings.</p>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 80%;">
                                                80%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Activity Table -->
                        <div class="card">
                            <div class="card-header bg-light fw-bold">Recent Bookings</div>
                            <div class="card-body p-0">
                                <table class="table table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Customer</th>
                                            <th>Service</th>
                                            <th>Status</th>
                                            <th>Rating</th>
                                        </tr>
                                    </thead>
